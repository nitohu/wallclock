<html>
<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta http-equiv="x-ua-compatible" content="ie=edge">
<title><%= title %></title>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

<link href="/static/css/base.css" rel="stylesheet" />
<script src="/static/js/device_form.js"></script>
</head>

<body>

<div class="container">
<!-- Main Content -->
    <% if (device) { %>
        <h1>Edit <%= device.name %></h1>
    <% } else { %>
        <h1>Create Device</h1>
    <% } %>
    <br/>
    <% if (err) { %>
        <div class="alert alert-warning">
            <%= err %>
        </div>
    <% } %>
    <form action="/devices" method="POST">
        <div class="d-md-flex">
            <input name="id" type="text" readonly class="d-none" 
            <% if (device) { %> value="<%= device.getID() %>" <% } %> />
            <div class="mb-3 me-2 w-100">
                <label for="name">Name</label>
                <input type="text" name="name" class="form-control" id="name"
                <% if (device) { %> value="<%= device.name %>" <% } %> />
            </div>
            <div class="mb-3 ms-2 w-100">
                <label for="ip">IP</label>
                <input type="text" name="ip" placeholder="127.0.0.1" class="form-control" id="ip"
                <% if (device) { %> value="<%= device.ip %>" <% } %> />
            </div>
        </div>
        <div class="mb-3">
            <label for="token">Token</label>
            <div class="input-group">
                <input type="text" name="token" readonly class="form-control" id="token"
                <% if (device) { %> value="<%= device.token %>" <% } %> />
                <button class="btn btn-outline-secondary" type="button" id="generateToken">Generate</button>
            </div>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="active" 
            <% if (!device || (device && device.active)) { %> checked <% } %> />
            <label class="form-check-label" for="active">
              Active
            </label>
        </div>
        <br/>
        <% if (device) { %>
            <input type="submit" class="btn btn-secondary" name="submit" value="Save" />
        <% } else { %>
            <input type="submit" class="btn btn-secondary" name="submit" value="Create" />
        <% } %>
        <input type="reset" class="btn btn-dark" value="Reset" />  
    </form>
    
    <hr />
    <!-- Toggle modes of clock (no need to always click on save) -->
    <div>
        <h2>Current Mode</h2>
    
        <!-- TODO: Improve ; this is just a temporary solution -->
        <select id="currentModeSelector" name="cmode" class="form-control">
            <option value="sclock" <% if (device.mode && device.mode.name == "sclock") { %> selected <% } %> >Simple Time</option>
            <option value="gclock" <% if (device.mode && device.mode.name == "gclock") { %> selected <% } %> >Gradient Time</option>
            <option value="rainbow" <% if (device.mode && device.mode.name == "rainbow") { %> selected <% } %> >Rainbow</option>
            <option value="static" class="configurable" <% if (device.mode && device.mode.name == "static") { %> selected <% } %> >Static Color</option>
            <option value="pulse" class="configurable" <% if (device.mode && device.mode.name == "pulse") { %> selected <% } %> >Pulse</option>
            <option value="fade" class="configurable" <% if (device.mode && device.mode.name == "fade") { %> selected <% } %> >Fade</option>
        </select>
        <br />
        <!-- TODO: Add more configurables -->
        <input type="color" name="currentColor" id="currentColor" class="form-control"
        <% if (device.color) { %> value="<%= device.color %>" <% } %>
        <% if (device.mode && !device.mode.isConfigurable) { %> style="visibility: hidden;" <% } %> />
        <br />
        <button class="btn btn-secondary btn-sm" id="updateMode">Update Mode</button>
    </div>
</div>


<footer>
    <hr />
    <div class="container d-md-flex">
        <div class="col">
            <a href="/" class="btn btn-link"> 
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
                </svg> Back
            </a>
        </div>
        <div class="col text-center">
            <% if (device) { %>
            <a href="/devices/delete?id=<%= device.getID() %>" class="btn btn-link text-danger">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                    <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z"/>
                </svg> Delete
            </a>
            <% } %>
        </div>
        <div class="col d-md-flex justify-content-md-end">
            <a href="/logout" class="btn btn-link text-right">Logout 
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z"/>
                </svg>
            </a>
        </div>
    </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
</body>
</html>