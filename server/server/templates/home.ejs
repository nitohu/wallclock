<html>
<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta http-equiv="x-ua-compatible" content="ie=edge">
<title><%= title %></title>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

<link href="/static/css/base.css" rel="stylesheet" />
</head>

<body>

<div class="container">
<!-- Main Content -->
    <h1>Welcome <%= settings.username %>!</h1>
    <p>You are logged in.</p>
    <hr />
    <h2>Your Devices</h2>
    <table class="table table-dark table-hover table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Device Name</th>
                <th scope="col">IP</th>
                <th scope="col">Token</th>
                <th scope="col">Last Connection</th>
                <th scope="col">Created</th>
                <th scope="col">Updated</th>
                <th scope="col">Active?</th>
            </tr>
        </thead>

        <tbody>
            <% if (devices.length > 0) { %> 
            <% devices.forEach(device => { %>
                <tr>
                    <td><%= device.getID() %></td>
                    <td><%= device.name %></td>
                    <td><%= device.ip %></td>
                    <td><%= device.token %></td>
                    <td><%= device.getLastConn() %></td>
                    <td><%= device.getCreateDate() %></td>
                    <td><%= device.getWriteDate() %></td>
                    <td><%= device.active %></td>
                </tr>
            <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="*">You have no devices set up.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<footer>
    <hr />
    <div class="container footer">
        <!-- <div class="col">
            <p>Test</p>
        </div> -->
        <div class="col d-md-flex justify-content-md-end">
            <a href="/logout" class="btn btn-link">Logout 
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z"/>
                </svg>
            </a>
        </div>
    </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
</body>
</html>